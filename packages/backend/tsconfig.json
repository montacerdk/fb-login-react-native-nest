{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@repos/*": ["./src/repositories/*"],
      "@entities/*": ["./src/entities/*"],
      "@modules/*": ["./src/modules/*"],
      "@common/*": ["./src/common/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "module": "commonjs",
    "declaration": true,
    "incremental": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./"
  }
}
